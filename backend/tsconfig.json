{
  "compilerOptions": {
    "target": "ES2022", // modern JS features
    "module": "ESNext", // ESM modules
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [
      "node"
    ], // fixes Node globals (process, fs, path, console)
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}